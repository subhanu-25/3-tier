pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Terraform Init') {
            steps {
                withCredentials([
                    usernamePassword(credentialsId: 'aws-creds',
                                     usernameVariable: 'AWS_ACCESS_KEY_ID',
                                     passwordVariable: 'AWS_SECRET_ACCESS_KEY'),
                    string(credentialsId: 'db-pass', variable: 'DB_PASSWORD')
                ]) {
                    sh '''
                        export AWS_ACCESS_KEY_ID=$AWS_ACCESS_KEY_ID
                        export AWS_SECRET_ACCESS_KEY=$AWS_SECRET_ACCESS_KEY
                        export TF_VAR_db_password=$DB_PASSWORD

                        cd infra
                        terraform init
                    '''
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                sh 'cd infra && terraform plan -out=tfplan'
            }
        }

        stage('Terraform Apply') {
            steps {
                sh 'cd infra && terraform apply -auto-approve tfplan'
            }
        }
    }

    post {
        success {
            sh 'cd infra && terraform output'
        }
    }
}
